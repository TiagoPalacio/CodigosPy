nums_par = []
nums_impar = []

for i in range(1,6):
    nums = int(input('Digite um número inteiro :'))
    if nums %2 == 0:
        nums_par.append(nums)
    else:
        nums_impar.append(nums)

soma_pares = sum(nums_par)

print(f'Os números pares digitados : {nums_par}')
print(f'A soma dos números pares digitados : {soma_pares}')
print(f'Os números ímpares digitados : {nums_impar} ')
print(f'A quantidade de números ímpares digitados : {len(nums_impar)}')
